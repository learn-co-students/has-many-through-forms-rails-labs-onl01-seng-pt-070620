<div class=post-content>
  <%= @post.content %>
</div>
<%= form_for post do |f| %>
  <%= f.label "Title" %>
    <%= f.text_field :title %>
  <br>
  <br>
  <%= f.label "Content" %>
  <%= f.text_area :content %>
  <br>
  <br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name%>
  <br>
  <br>
  <%= f.fields_for :categories, post.categories.build do |cat| %>
    <%= cat.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>