
<%= form_for post do |f| %>
 <p>
    <%= f.label "Title" %>
    <%= f.text_field :title %>
</p>

<p>
  <%= f.label "Content" %>
  <%= f.text_area :content %>
</p>
  
<p>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name  %>
</p>

<p>
  <%= f.fields_for :categories, post.categories.build do |cat| %>
    <%= cat.text_field :name %>
  <% end %>
</p>


  <%= f.submit %>
<% end %>

