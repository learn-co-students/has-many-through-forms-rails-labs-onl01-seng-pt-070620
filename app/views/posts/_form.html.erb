<%= form_for post do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %>
  <%= f.label "Content" %>
  <%= f.text_area :content %>

  <%= f.label :categories %>
<h3>Choose an existing category:</h3>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <h3>Or create a new category: </h3>
  <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>