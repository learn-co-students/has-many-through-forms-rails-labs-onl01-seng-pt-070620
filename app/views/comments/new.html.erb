<h1>COMMENT</h1>
<%= form_for(@comment) do |f| %>
    <br>
    <h2>Post</h2>
        <%= f.collection_check_boxes(:post_id, Post.all, :id, :title) do |p| %>
        <p>
            <%= p.label %>
            <%= p.check_box %>
        </p>
        <% end %>
    

    <br>
    <h2>Comment</h2>
    <label>Enter your Comment for this post here</label>
    <input type="text" name = "comment[content]" id="comment_content" >
    <br>
    <br>
    <h2>User</h2>
    <%= f.collection_check_boxes(:user, User.all, :id, :username) do |u| %>
        <p>
            <%= u.label %>
            <%= u.check_box %>
        </p>
        <% end %>
    <%= f.submit %>

<% end %>
